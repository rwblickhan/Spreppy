#!/bin/zsh
set -euo pipefail

# Check if there's anything on the branch
if [[ -n $(git status -s) ]]; then
  echo "Cannot push on an unclean branch"
  exit 1
else
  # Run Swiftformat
  mint run swiftformat .
  # If Swiftformat changed anything, commit it
  if [[ -n $(git status -s) ]]; then
    git add .
    git commit -m "Swiftformat"
  fi
fi

exit 0
